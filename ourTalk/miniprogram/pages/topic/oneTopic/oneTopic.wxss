page {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
}

.scrollView {
  height: 94%;
  margin-bottom: 8%;
  overflow: scroll;
}

.Topic {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
}

.topicUserInfo {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 140rpx;
}

.topicUserImg {
  width: 90rpx;
}

.topictUserNAT {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.topicUserName {
  font-size: 45rpx;
}

.topicTime {
  font-size: 25rpx;
  color: #666;
}

.imgBox {
  margin-top:30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.img {
  height: 300rpx;
  width: 100%;
  margin-bottom: 10rpx;
  border: 1rpx solid #e9eaec;
  border-radius: 4rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.topicBetweenCommentBox {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.addCommentBg {
  background-color: #efefef;
  width: 100%;
  height: 8%;
  position: fixed;
  bottom: 0;
}

.addComment {
  display: flex;
  justify-content: center;
  height: 100%;
}

.addCommentBox {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 90%;
}

.addCommentBtn {
  width: 80rpx;
  height: 100%;
  margin-right: -40rpx;
}

.addCommentInput {
  width: 95%;
  height: 80rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
}

.comment {
  background-color: #f8f8f9;
}

.aComment {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 100%;
}

.commentUserInfo {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 80rpx;
}

.commentUserImg {
  width: 60rpx;
}

.commentUserNAT {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.commentUserName {
  font-size: 32rpx;
}

.userCommentTime {
  font-size: 23rpx;
  color: #666;
}

.divLine {
  background: #e9eaec;
  width: 100%;
  height: 1rpx;
  margin-top: 20rpx;
}

.toTopBtn {
  height: 80rpx;
  width: 80rpx;
  position: fixed;
  bottom: 140rpx;
  right: 10rpx;
  opacity: 0.7;
}

.noComment {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  margin-top: 30rpx;
  color: #ccc;
}

.topicBetweenCommentRight {
  display: flex;
  margin-right: 10rpx;
  margin-top: 20rpx;
}
