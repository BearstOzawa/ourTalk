<l-tabs bind:linchange="changeTabs">
  <l-tabpanel tab="主题管理" key="one" slot="one">

    <!-- 主题管理 -->
    <view>
      <view wx:if="{{topic}}" class='topicAdmin'>
        <view class="topicAdminHead">
          <view class="topicAdminHeadth">ID</view>
          <view class="topicAdminHeadth">主题</view>
          <view class="topicAdminHeadth">用户</view>
          <view class="topicAdminHeadth">时间</view>
          <view class="topicAdminHeadth">操作</view>
        </view>
        <block wx:for="{{topic}}" wx:key="{{}}">
          <view class="topicAdminBodyOne" wx:if="{{index % 2 == 0}}">
            <view class="topicAdminBodyID">{{item._id}}</view>
            <view class="topicAdminBodyName">
              <text class='topicAdminBodyNameText'>{{item.topicName}}</text>
            </view>
            <view class="topicAdminBodyName">{{item.topicUser}}</view>
            <view class="topicAdminBodyTime">{{item.topicTime}}</view>
            <view class="td">
              <l-button type="error" width="90" height="50" data-id='{{item._id}}' bindtap='onTopicDel'>删除</l-button>
            </view>
          </view>
          <view class="topicAdminBodyTwo" wx:else>
            <view class="topicAdminBodyID">{{item._id}}</view>
            <view class="topicAdminBodyName">{{item.userName}}</view>
            <view class="td">
              <l-button type="error" width="90" height="50" data-id='{{item._id}}' bindtap='onTopicDel'>删除</l-button>
            </view>
          </view>
        </block>

      </view>

      <view wx:else="{{topic}}" class='none'>
        <text>暂时没有主题！</text>
      </view>

    </view>


  </l-tabpanel>
  <l-tabpanel tab="用户管理" key="two" slot="two">


    <view>
      <view wx:if="{{user}}" class='userAdmin'>
        <view class="userAdminHead">
          <view class="userAdminHeadth">ID</view>
          <view class="userAdminHeadth">昵称</view>
          <view class="userAdminHeadth">操作</view>
        </view>
        <block wx:for="{{user}}" wx:key="{{}}">
          <view class="userAdminBodyOne" wx:if="{{index % 2 == 0}}">
            <view class="UserAdminBodyID">{{item._id}}</view>
            <view class="UserAdminBodyName">{{item.userName}}</view>
            <view class="td">
              <l-button type="error" width="90" height="50" data-id='{{item._id}}' bindtap='onUserDel'>删除</l-button>
              <l-button type="success" width="90" height="50" data-id='{{item._id}}' bindtap='onUserUpdate'>修改</l-button>
            </view>
          </view>
          <view class="userAdminBodyTwo" wx:else>
            <view class="UserAdminBodyID">{{item._id}}</view>
            <view class="UserAdminBodyName">{{item.userName}}</view>
            <view class="td">
              <l-button type="error" width="90" height="50" data-id='{{item._id}}' bindtap='onUserDel'>删除</l-button>
              <l-button type="success" width="90" height="50" data-id='{{item._id}}' bindtap='onUserUpdate'>修改</l-button>
            </view>
          </view>
        </block>

      </view>

      <view wx:else="{{user}}" class='none'>
        <text>暂时没有用户！</text>
      </view>

    </view>


  </l-tabpanel>
</l-tabs>