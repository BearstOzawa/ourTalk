/* 页面样式 */
page{
  height: 100%;
}
.thePage{
  height:100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.onePage{
  height: 100%;
}
/* 选项卡容器大小 */
.tapView{
  height: 100%;
  width: 100%;
}
.scrollView{
  height: 100%;
  overflow: scroll;
}
/* OneCard */
.onrCardView{
  margin-top: 5rpx;
  margin-bottom: 5rpx;
}
.card{
  height: 260rpx;
  }
    /* 用户信息修饰 */
    .topicUserInfo{
      display: flex;
      flex-direction: row;
      justify-content: flex-start;
      align-items: center;
      height: 60rpx;
    }
    .topicUserInfoImg{
      width: 60rpx;
    }
    .topicUserInfoNAT{
      display: flex;
      flex-direction: column;
      margin-left: 20rpx;
    }
    .topicUserInfoName{
      font-size: 28rpx;
    }
    .topicUserInfoTime{
      font-size: 25rpx;
      color: #666666;
    }


    /* 主题修饰 */
    .topicItem{
      font-size: 34rpx;
      margin-top: 10rpx;
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 2; /*行数*/
      -webkit-box-orient: vertical;
    }

    /* 评论图标 */
    .topicContainer{
      display: flex;
      justify-content: flex-end;
      align-items: center;
      margin-top: 10rpx;
    }
    .topicContainerNum{
      font-size: 32rpx;
    }


